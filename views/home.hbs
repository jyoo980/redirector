<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-md-6">

            <div class="center">
                <h1 class="h3 mb-3 fw-normal">Redirector</h1>

                {{#if message}}
                    <div class="alert {{messageClass}}" role="alert">
                        {{message}}
                    </div>
                {{/if}}

                <h3 class="h5 mb-3 fw-normal">Enter Name</h3>

                <form method="POST" action="{{prefix}}/fwd">

                    <div class="form-group">
                        <input id="name" name="name" class="form-control"
                               style="text-align: center;"
                               type="text" autocorrect="off" autocapitalize="none"
                               placeholder="Enter short name"/>
                    </div>

                    <div class="center" style="padding-bottom:2em;">
                        <button type="submit" class="btn btn-primary">Go!</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

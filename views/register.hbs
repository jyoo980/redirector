<div class="container">
    <div class="narrow">

        <div class="center">
            <h1 class="h3 mb-3 fw-normal">Redirector Registration</h1>
        </div>

        {{#if message}}
            <div class="alert {{messageClass}}" role="alert">
                {{message}}
            </div>
        {{/if}}

        <form method="POST" action="register">
            <div class="form-group">
                <label for="username">User name:</label>
                <input id="username" name="username" type="text"
                       class="form-control" placeholder="Enter user name"/>
            </div>

            <div class="form-group">
                <label for="passwordInput">Password:</label>
                <input id="passwordInput" name="password" type="password"
                       class="form-control" placeholder="Password"/>
            </div>

            <div class="form-group">
                <label for="confirmPasswordInput">Confirm Password:</label>
                <input id="confirmPasswordInput" name="confirmPassword" type="password"
                       class="form-control" placeholder="Re-enter password"/>
            </div>

            {{#if message}}
                <div class="alert {{messageClass}}" role="alert">
                    {{message}}
                </div>
            {{/if}}

            <div class="center" style="padding-bottom:2em;">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </form>

    </div>
</div>
